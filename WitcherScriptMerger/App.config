<?xml version="1.0" encoding="utf-8" ?>

<!-- ABOUT THE SETTINGS
       GameDirectory           The Witcher 3 Wild Hunt folder
       Scripts Directory       Where to look for vanilla scripts (if blank, will look in \GameDirectory\content\content0\scripts)
       BundlesDirectory        Where to look for vanilla bundles (if blank, will look in \GameDirectory\content\content0\bundles)
       ModsDirectory           Where to look for mod folders (if blank, will look in \GameDirectory\mods)
       IgnoreModNames          Which mod folders to ignore
       MergedModName           Which mod folder to save merged scripts in
       ReviewEachMerge         Whether to show the text comparison UI for every merge, instead of just ones that aren't auto-solvable
       ShowPathsInKDiff3       Whether to show file paths in KDiff3 instead of just Vanilla, modName1, modName2
       ReportAfterMerge        Whether to show a post-merge report with buttons to open files/directories
       KDiff3Path              Where KDiff3.exe is located
       QuickBmsPath            Where quickbms.exe is located
       WccLitePath             Where wcc_lite.exe is located
-->

<configuration>
  <appSettings>
    <add key="GameDirectory" value="" />
    <add key="ScriptsDirectory" value="" />
    <add key="BundlesDirectory" value=""/>
    <add key="ModsDirectory" value="" />
    <add key="IgnoreModNames" value="modBaseScripts" />
    <add key="MergedModName" value="mod__MergedScripts" />
    <add key="ReviewEachMerge" value="false" />
    <add key="ShowPathsInKDiff3" value="false" />
    <add key="ReportAfterMerge" value="true" />
    <add key="KDiff3Path" value="Tools\KDiff3\KDiff3.exe" />
    <add key="QuickBmsPath" value="Tools\QuickBMS\quickbms.exe" />
    <add key="WccLitePath" value="Tools\wcc_lite\wcc_lite.exe" />
    <add key="StartMaximized" value="false" />
    <add key="StartWidth" value="" />
    <add key="StartHeight" value="" />
    <add key="StartPosTop" value="" />
    <add key="StartPosLeft" value="" />
    <add key="StartSplitterPosPct" value="" />
  </appSettings>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
</configuration>