<?xml version="1.0" encoding="utf-8" ?>

<!-- ABOUT THE SETTINGS
       GameDirectory           The Witcher 3 Wild Hunt folder
       ModDirectory            Where to look for mod folders (if blank, will look in \GameDirectory\mods)
       Scripts Directory       Where to look for vanilla scripts (if blank, will look in \GameDirectory\content\content0\scripts)
       CheckAtLaunch           Whether to check for conflicts automatically at launch
       IgnoreModNames          Which mod folders to ignore
       MergedModName           Which mod folder to save merged scripts in
       ReviewEachMerge         Whether to show the text comparison UI for every merge, instead of just ones that aren't auto-solvable.
       BackupDirectory         Where to put backups of unmerged files
       MoveToBackupAfterMerge  Whether to move old, un-merged scripts after a merge where all changes were merged successfully
       LineBreakSymbol         Resolve Conflict screen: Whether to mark line breaks with a symbol
       ConflictContextRadius   Resolve Conflict screen: How many lines of text to show before & after a conflict
-->

<configuration>
  <appSettings>
    <add key="GameDirectory" value="" />
    <add key="ModsDirectory" value="" />
    <add key="ScriptsDirectory" value="" />
    <add key="CheckAtLaunch" value="false" />
    <add key="IgnoreModNames" value="modBaseScripts" />
    <add key="MergedModName" value="modAAAAAAMergedScripts" />
    <add key="ReviewEachMerge" value="false" />
    <add key="BackupDirectory" value="Script Merger Backups" />
    <add key="MoveToBackupAfterMerge" value="true" />
    <add key="LineBreakSymbol" value="false" />
    <add key="ConflictContextRadius" value="25" />
    <add key="StartMaximized" value="false" />
    <add key="StartWidth" value="" />
    <add key="StartHeight" value="" />
    <add key="StartPosTop" value="" />
    <add key="StartPosLeft" value="" />
  </appSettings>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
</configuration>